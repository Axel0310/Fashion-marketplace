<form action="/shops/{{currentUser.shop}}/update-product/{{product._id}}" method="post" class="edit-product-form" enctype="multipart/form-data">
    <h3 class="form-title">Update product</h3>
    <div class="form-item-wrapper flexed-item">
        <label for="product-name" class="label">Product name</label>
        <input id="product-name" name="name" type="text" class="input-text input" placeholder="ex: Nice dress"
            value="{{product.name}}" required>
    </div>

    <div class="form-item-wrapper flexed-item">
        <label for="product-desc" class="label">Product description</label>
        <input id="product-desc" name="description" type="text" class="input-text input" placeholder="ex: Swag"
            value="{{product.description}}" required>
    </div>

    <div class="form-item-wrapper flexed-item">
        <label for="product-price" class="label">Product price</label>
        <input id="product-price" name="price" type="number" class="input-text input" value="{{product.price}}" required>
    </div>

    <div class="form-item-wrapper flexed-item">
        <label for="product-genre" class="label">Product genre</label>
        <select id="product-genre" name="genre" class="select" required>
            <option value="-1" disabled selected>Choose a category</option>
            <option value="men">Women</option>
            <option value="women">Men</option>
        </select>
    </div>

    <table>
        <thead>
            <th>Size</th>
            <th>XXS</th>
            <th>XS</th>
            <th>S</th>
            <th>M</th>
            <th>L</th>
            <th>XL</th>
            <th>XXL</th>
        </thead>
        <tbody>
            <tr>
                <td>Quantity</td>
                <td><input name="qtyXXS" type="number" class="input-text input" value="{{xxsSize}}"></td>
                <td><input name="qtyXS" type="number" class="input-text input" value="{{xsSize}}"></td>
                <td><input name="qtyS" type="number" class="input-text input" value="{{sSize}}"></td>
                <td><input name="qtyM" type="number" class="input-text input" value="{{mSize}}"></td>
                <td><input name="qtyL" type="number" class="input-text input" value="{{lSize}}"></td>
                <td><input name="qtyXL" type="number" class="input-text input" value="{{xlSize}}"></td>
                <td><input name="qtyXXL" type="number" class="input-text input" value="{{xxlSize}}"></td>
            </tr>
        </tbody>
    </table>

    <div class="form-item-wrapper flexed-item">
        <label for="product-category" class="label">Product category</label>
        <select id="product-category" name="category" class="select" required>
            <option value="-1" disabled selected>Choose a category</option>
            {{#each categories}}
            <option value="{{this._id}}">{{this.name}}</option>
            {{/each}}
        </select>
    </div>



    <div class="form-item-wrapper flexed-item">
        <label for="product-img" class="label">Product image</label>
        <input id="product-img" name="image" type="file" class="input">
    </div>

    <button class="button">Update product</button>
</form>