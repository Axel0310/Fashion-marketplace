<a href="/shops/{{shop._id}}">
    <div class="one-product-container">
        <div class="product-shop">
            <h1 class="shop-name">{{shop.name}}</h1>
            <img src="{{shop.image}}" alt="img-product" class="product-img">
        </div>
</a>
<div class="product-img-container">
    <img src="{{image}}" alt="img-product" class="product-img">
</div>

<div class="flexed-item">
<form action="/user/cart" method="post">

<div class="product-info">
    <div class="product-info-header">
    <input class="hidden" type="text" name="name" value = "{{product.name}}">
    <input class="hidden" type="text" name="price" value = "{{product.price}}">
     <input class="hidden" type="text" name="id" value = "{{product._id}}">
        <h1 class="product-name">{{product.name}}</h1>
        <p class="product-description">{{product.description}}</p>
        <p class="product-price">{{product.price}}â‚¬</p>
    </div>
</div>
        <select name="size" id="select-size"class="select product-select">
            <option value="">Choose Size</option>
            {{#each product.sizesAvailable}}
            <option value="{{this.size}}">{{this.size}}</option>
            {{/each}}
        </select>

        <select name="quantity" id="select-quantity" class="select product-select">
            <option value="">Choose Quantity</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>

        <button href="" class="button-primary a-link">Add to cart <i
                class="fas fa-shopping-cart shop-cart-icon-page"></i></button>
    </form>
</div>


</div>