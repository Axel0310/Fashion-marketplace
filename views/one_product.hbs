<a href="/shops/{{shop._id}}">
    <div class="one-product-container">
        <div class="product-shop">
            <h1 class="shop-name">{{shop.name}}</h1>
            <img src="{{shop.image}}" alt="img-product" class="product-img">
        </div>
</a>
<div class="product-img-container">
    <img src="{{image}}" alt="img-product" class="product-img">
</div>

<div class="product-info">
    <div class="product-info-header">
        <h1 class="product-name">{{name}}</h1>
        <p class="product-description">{{description}}</p>
        <p class="product-price">{{price}}â‚¬</p>
    </div>
</div>
<div class="flexed-item">
    <form action="/cart" method="post">
        <select name="select-size" id="select-size"class="select product-select">
            <option value="">Choose Size</option>

            {{#each sizesAvailable}}
            <option value="{{this.size}}">{{this.size}}</option>
            {{/each}}
        </select>
        <select name="select-quantity" id="select-quantity" class="select product-select">
            <option value="">Choose Quantity</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        <button href="" class="button-primary a-link">Add to cart <i
                class="fas fa-shopping-cart shop-cart-icon-page"></i></a>
    </form>
</div>


</div>