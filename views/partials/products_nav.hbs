<div class="big-container">
    <header class="header">
        <nav class="nav-wrapper nav-categories">
            <div class="nav-category dropdown">
                 <h2 class="flexed-item button-one">Women</h2>
                 <div class="dropdown-content">
                     {{#each this}}
                        {{#if (includes this.genre "women")}}
                        <a href="/products/women/{{this._id}}">{{this.name}}</a>
                        {{/if}}
                     {{/each}}
                 </div>
            </div>
            <div class="nav-category dropdown">
                <h2 class="flexed-item button-one">Men</h2>
                <div class="dropdown-content">
                     {{#each this}}
                        {{#if (includes this.genre "men")}}
                        <a href="/products/men/{{this._id}}">{{this.name}}</a>
                        {{/if}}
                     {{/each}}
                 </div>
            </div>
            <div class="nav-category">
                <a href="/shops" class="flexed-item button-one">SHOPS</a>
            </div>
        </nav>
    </header>
</div>