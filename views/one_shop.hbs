<div class="title-wrapper">
        <div class="line"></div>
        <h1 class="section-title">Shop details</h1>
        <div class="line"></div>
</div>

<div class="detailled-content-wrapper">
        <img src="{{shop.image}}" alt="img-product" class="detailled-img">
        <div class="detailled-info-shop-wrapper">
                <div class="flexed-item">
                        <h1 class="product-name">{{shop.name}}</h1>
                        <a href="/user/favorites/shop/{{shop._id}}" class="like-btn">
                                <i class="far fa-heart fa-2x"></i>
                        </a>
                </div>
                <p class="product-description">{{shop.description}}</p>
        </div>
</div>

<div class="title-wrapper">
        <div class="line"></div>
        <h1 class="section-title">Shop's collection</h1>
        <div class="line"></div>
</div>

<div class="products-wrapper">

        {{#each products}}
        {{> product_mini }}
        {{/each}}

</div>